{
  "name": "hacker-rank-backend",
  "version": "1.0.0",
  "private": true,
  "description": "HackerRank-like backend using NestJS microservices (Auth, User, Contest)",
  "author": "Your Name",
  "license": "MIT",
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "start:auth": "npm --workspace services/auth run start",
    "start:user": "npm --workspace services/user run start",
    "start:contest": "npm --workspace services/contest run start",
    "start:all": "concurrently \"npm run start:auth\" \"npm run start:user\" \"npm run start:contest\"",
    "build:all": "npm run build --workspaces",
    "lint:all": "npm run lint --workspaces",
    "format": "prettier --write .",
    "clean": "rimraf node_modules dist"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/platform-express": "^10.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
